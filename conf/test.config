/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/scrnaseq -profile test
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  singleEnd = false
  readPaths = [
    ['S10', ['https://raw.githubusercontent.com/nf-core/test-datasets/scrnaseq/testdata/S10_L001_R1_001.fastq.gz', 'https://raw.githubusercontent.com/nf-core/test-datasets/scrnaseq/testdata/S10_L001_R2_001.fastq.gz']]
  ]
}
